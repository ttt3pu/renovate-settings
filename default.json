{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":pinDependencies", ":pinDevDependencies", "schedule:weekly"],
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint", "stylelint", "prettier", "^@types"],
      "matchPackageNames": [
        "actions/checkout",
        "actions/setup-node",
        "http-server",
        "node",
        "node.js",
        "pnpm",
        "pnpm/action-setup",
        "renovate"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "@faker-js/faker",
        "@nuxtjs/google-fonts",
        "@prisma/client",
        "@vuepic/vue-datepicker",
        "autoprefixer",
        "date-fns",
        "dayjs",
        "markdown-it",
        "markdown-it",
        "microcms-js-sdk",
        "netlify-cli",
        "next",
        "nuxt",
        "nuxt-gtag",
        "nuxt-typed-router",
        "pinia",
        "postcss-html",
        "postcss",
        "prisma",
        "react-datepicker",
        "react-dom",
        "react-icons",
        "react-toastify",
        "react",
        "sass",
        "simple-icons",
        "tailwindcss",
        "ts-node",
        "tsx",
        "typescript",
        "vue-gtag-next",
        "vue-material-design-icons",
        "vue-tsc"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchPackageNames": ["@xmldom/xmldom", "@pinia/nuxt"],
      "automerge": true
    },
    {
      "groupName": "stylelint",
      "matchPackagePatterns": ["stylelint"]
    },
    {
      "groupName": "nuxt",
      "matchPackageNames": ["nuxt", "nuxt-typed-router"]
    }
  ]
}
