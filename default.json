{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":pinDependencies", ":pinDevDependencies"],
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchPackageNames": ["actions/checkout", "actions/setup-node", "pnpm/action-setup"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "@faker-js/faker",
        "@nuxtjs/google-fonts",
        "@prisma/client",
        "@types/*",
        "date-fns",
        "dayjs",
        "eslint",
        "http-server",
        "markdown-it",
        "microcms-js-sdk",
        "netlify-cli",
        "next",
        "next-auth",
        "node.js",
        "node",
        "nuxt-typed-router",
        "nuxt",
        "pinia",
        "pnpm",
        "postcss-html",
        "postcss",
        "prettier",
        "prisma",
        "react-dom",
        "react-icons",
        "react",
        "renovate",
        "sass",
        "simple-icons",
        "stylelint",
        "ts-node",
        "tsx",
        "typescript",
        "vue-gtag-next",
        "vue-material-design-icons"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchPackageNames": ["@sidebase/nuxt-auth", "@xmldom/xmldom", "@pinia/nuxt"],
      "automerge": true
    },
    {
      "groupName": "stylelint",
      "matchPackagePatterns": ["stylelint"]
    },
    {
      "groupName": "nuxt",
      "matchPackageNames": ["nuxt", "nuxt-typed-router"]
    }
  ]
}
