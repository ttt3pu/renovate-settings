{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":pinDependencies", ":pinDevDependencies", "schedule:weekly"],
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchPackageNames": ["actions/checkout", "actions/setup-node", "pnpm/action-setup"],
      "automerge": true
    },
    {
      "groupName": "npm automerge packages",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "@faker-js/faker",
        "@nuxt/eslint",
        "@nuxtjs/stylelint-module",
        "@types/*",
        "@eslint/*",
        "eslint",
        "eslint-config-next",
        "eslint-config-prettier",
        "http-server",
        "netlify-cli",
        "node.js",
        "node",
        "nuxt-typed-router",
        "pnpm",
        "prettier",
        "renovate",
        "stylelint",
        "stylelint-scss",
        "typescript",
        "ts-node",
        "tsx",
        "vue-tsc",
        "zenn-cli"
      ],
      "automerge": true
    },
    {
      "groupName": "nuxt",
      "matchPackageNames": ["nuxt", "nuxt-typed-router"]
    }
  ]
}
